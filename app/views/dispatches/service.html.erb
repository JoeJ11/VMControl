<script type="text/javascript" src="/thumanage/assets/service.js"></script>
<script>
    function btn_click() {
        window.open(document.getElementById('iframe').src)
    };
    function mode_select(url) {
      console.alert('function call')
      document.getElementById('iframe').src = url
    };
    $('#bd').click(function(e) {
        e.preventDefault();
    });
</script>

<%- if @machine == -1 %>
    <div>
      <%= @message %>
    </div>
<%- else %>
    <body onload="timer = setInterval(function () {
                get_progress(<%= @machine %>)
            }, 5000)">
    <ul class="nav nav-tabs" id='nav_tab'>
    </ul>

    <div class="row">
      <div class="progress">
        <div class="progress-bar" role="progressbar" id="progress_bar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 0%;">
          Prepare to start
        </div>
      </div>
    </div>

    <div class="row">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" id="iframe" src=""></iframe>
      </div>
    </div>
    </body>
<%- end %>
