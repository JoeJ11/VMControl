<script type="text/javascript" src="/js/service.js"></script>

<%- if @machine == -1 %>
    <div>
      <%= @message %>
    </div>
<%- else %>
    <body onload="timer = setInterval(function () {
                get_progress(<%= @machine %>)
            }, 5000)">
    <div class="row">
        <iframe class="col-md-10" id="iframe" frameborder="0" height="500" r></iframe>
        <div class="col-md-2" id="infoBar">
          Information can be seen here.
        </div>
    </div>
    </body>
<%- end %>