<script type="text/javascript" src="/thumanage/assets/service.js"></script>
<script>
    function btn_click() {
        window.open(document.getElementById('iframe').src)
    };
    $('#bd').click(function(e) {
        e.preventDefault();
    });
</script>

<%- if @machine == -1 %>
    <div>
      <%= @message %>
    </div>
<%- else %>
    <body onload="timer = setInterval(function () {
                get_progress(<%= @machine %>)
            }, 5000)">
    <div class="row">
      <p class="bg-info" id="stage_1"> 正在准备开始</p>
      <p class="bg-info" id="stage_2"> 正在配置虚拟机环境</p>
      <p class="bg-info" id="stage_3"> 正在准备代理</p>
      <div class="alert alert-danger" style="display:none" role="alert" id="failure_info">
        Failure! Please try later.
      </div>
      <div class="alert alert-success" style="display:none" role="alert" id="success_info">
        Success! Enjoy yourself.
      </div>
      <button type="button" id="myButton" style="display:none" class="btn btn-primary" onclick="btn_click()">
        打开全屏界面
      </button>
    </div>
    <div class = "row" id="bd" style="overflow:hidden">
      <div class="col-md-1"></div>
      <iframe frameborder="0"  style="overflow:hidden;width:100%" height="600" width="100%" class="col-md-10" id="iframe"></iframe>
      <div class="col-md-1"></div>
    </div>
    <div class = "row"></div>
    </body>
<%- end %>
