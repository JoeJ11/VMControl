<%= render 'nav'%>
<p id="notice"><%= notice %></p>

<p>
  <strong>Specifier:</strong>
  <%- if @cluster_configuration.specifier %>
    <%= @cluster_configuration.specifier%>
  <%- else %>
    <%= "*not defined*"%>
      <%- end %>
</p>

<p>
  <strong>Size:</strong>
  <%= @cluster_configuration.size %>
</p>

<p>
  <strong>Instantiated:</strong>
  <%= @cluster_configuration.instantiated %>
</p>

<%- @templates.each do |template| %>
    <p>
        <%= link_to template.name, template %>
    </p>
<%- end %>

<%= link_to 'Edit', edit_cluster_configuration_path(@cluster_configuration) %> |
<%= link_to 'Back', cluster_configurations_path %>
<%- if @cluster_configuration.instantiated == 'false' %>
    <%= link_to 'Instantiate', instantiate_cluster_configuration_path %>
<%- end %>